{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["./apps/backend/.env.*", "./apps/frontend/.env.*"],
  "globalDotEnv": [".env.local", ".env"],
  "globalEnv": [
    "PUBLIC_FRONTEND_GQL_API_ENDPOINT",
    "PUBLIC_FRONTEND_ENV",
    "BACKEND_MONGODB_URI",
    "BACKEND_PAYLOAD_SECRET"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "lint-fix": {},
    "ts:check": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": ["**/.env.local"]
    }
  }
}
