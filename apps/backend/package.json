{
  "name": "backend",
  "description": "Payload project created from blog template",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "dotenv -e ./.env.local cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "yarn copyfiles && yarn build:payload && yarn build:server",
    "serve": "dotenv -e ./.env cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema",
    "lint": "eslint \"**/*.ts*\"",
    "lint-fix": "eslint \"**/*.ts*\" . --cache --fix",
    "ts:check": "tsc --noEmit",
    "vercel-build": "echo VERCEL BUILD COMMAND"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint \"**/*.ts*\" . --cache --fix"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "payload": "^1.11.2",
    "payload-plugin-lexical": "^0.6.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.9",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "tsconfig": "*",
    "typescript": "^4.8.4"
  }
}
