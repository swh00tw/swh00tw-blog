{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "react",
    "paths": {
      "payload/generated-types": ["./src/payload-types.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "api"],
  "exclude": ["node_modules", "dist", "build"],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
